// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "show_edit_predictions": true,
  "ssh_connections": [
    {
      "host": "5.230.66.147",
      "username": "root",
      "projects": [
        {
          "paths": ["/root"]
        }
      ]
    }
  ],
  "soft_wrap": "preferred_line_length",
  "preferred_line_length": 110,
  "diagnostics": {
    "inline": {
      "enabled": true,
      "max_severity": "warning" // same values as the `diagnostics_max_severity` from the editor settings
    }
  },
  "cursor_blink": false,
  "relative_line_numbers": true,
  "restore_on_startup": "last_session",
  "restore_on_file_reopen": true,
  "close_on_file_delete": false,
  "icon_theme": "Colored Zed Icons Theme Dark",
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      },
      "binary": {
        "path": "/usr/bin/biome",
        "arguments": ["lsp-proxy"],
        "ignore_system_version": false
      }
    }
  },
  "languages": {
    "TypeScript": {
      "language_servers": ["!typescript-language-server", "..."]
    },
    "Vue.js": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  },
  "terminal": {
    "font_family": "Hack Nerd Font Mono",
    "font_fallbacks": ["Vazir Code Hack"],
    "font_features": { "calt": true, "cv01": true },
    "shell": {
      "program": "fish"
    }
  },
  "agent_servers": {
    "Qwen CLI": {
      "command": "/usr/bin/qwen",
      "args": ["--experimental-acp"],
      "env": {}
    }
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "model_parameters": [],
    "default_model": {
      "provider": "zed.dev",
      "model": "gpt-5-nano"
    }
  },
  "vim_mode": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "ui_font_family": "GeistMono Nerd Font",
  "buffer_font_family": "GeistMono Nerd Font",
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Dark"
  },
  "language_models": {
    "openai": {
      "api_url": "https://api.avalai.ir/v1",
      "available_models": [
        {
          "name": "gemini-2.0-flash",
          "display_name": "gemini-2.0-flash",
          "max_tokens": 8192
        }
      ]
    }
  }
}
