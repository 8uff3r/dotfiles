// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "bindings": {
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "alt-enter": "workspace::NewTerminal",
      "ctrl-'": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "Workspace && !(vim_mode == insert) && !Terminal",
    "bindings": {
      "space space": "file_finder::Toggle",
      "space b r": "pane::CloseItemsToTheRight",
      "space b l": "pane::CloseItemsToTheLeft",
      "space b d": "pane::CloseActiveItem",
      "space e": "workspace::ToggleLeftDock",
      "space .": "search::ToggleReplace",
      "space s f": [
        "task::Spawn",
        { "task_name": "file_finder", "reveal_target": "center" }
      ],
      "space s g": [
        "task::Spawn",
        { "task_name": "fulltext_search", "reveal_target": "center" }
      ]
    }
  },
  {
    "context": "(Editor && mode == full)",
    "bindings": {
      "ctrl-alt-r": "buffer_search::DeployReplace"
    }
  },
  {
    "context": "BufferSearchBar",
    "bindings": {
      "ctrl-alt-r": "search::ToggleReplace"
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "H": "pane::ActivatePreviousItem",
      "L": "pane::ActivateNextItem"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "alt-h": "pane::ActivatePreviousItem",
      "alt-l": "pane::ActivateNextItem"
    }
  },
  {
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      "s": "vim::PushSneak"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "shift-s": "vim::PushAddSurrounds",
      "shift-x": "vim::Exchange"
    }
  }
]
